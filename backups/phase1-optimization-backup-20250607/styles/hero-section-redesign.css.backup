/* Hero Section Redesign - Modern Layout Enhancement */

.hero {
    min-height: 80vh !important;
    padding: 4rem 0 !important;
    position: relative;
    overflow: hidden;
}

/* Enhanced Badge Design */
.hero .text-sm.tracking-wide {
    background: linear-gradient(135deg, rgba(147, 51, 234, 0.1), rgba(236, 72, 153, 0.1)) !important;
    backdrop-filter: blur(10px) !important;
    border: 1px solid rgba(147, 51, 234, 0.2) !important;
    padding: 0.75rem 1.5rem !important;
    border-radius: 50px !important;
    font-weight: 600 !important;
    letter-spacing: 0.1em !important;
    color: #6366f1 !important;
    text-transform: uppercase !important;
    font-size: 0.875rem !important;
    display: inline-block !important;
    margin-bottom: 2rem !important;
    box-shadow: 0 8px 32px rgba(147, 51, 234, 0.15) !important;
    transition: all 0.3s ease !important;
}

.hero .text-sm.tracking-wide:hover {
    transform: translateY(-2px) !important;
    box-shadow: 0 12px 40px rgba(147, 51, 234, 0.25) !important;
}

/* Enhanced Main Headline */
.hero h1 {
    font-size: 3.5rem !important;
    line-height: 1.1 !important;
    font-weight: 800 !important;
    margin-bottom: 1.5rem !important;
    color: #1f2937 !important;
    letter-spacing: -0.02em !important;
}

/* Artist Name Enhancement */
.hero h1 .text-gradient {
    background: linear-gradient(135deg, #f59e0b, #ef4444, #8b5cf6) !important;
    -webkit-background-clip: text !important;
    -webkit-text-fill-color: transparent !important;
    background-clip: text !important;
    font-weight: 900 !important;
    display: block !important;
    margin-top: 0.5rem !important;
}

/* Enhanced Description */
.hero .text-lg.text-gray-600 {
    font-size: 1.25rem !important;
    line-height: 1.7 !important;
    color: #4b5563 !important;
    margin-bottom: 2.5rem !important;
    font-weight: 400 !important;
    max-width: 90% !important;
}

/* Enhanced Button Container */
.hero .flex.space-x-4 {
    gap: 1.5rem !important;
    margin-top: 2.5rem !important;
}

/* Primary Button Enhancement */
.hero .btn-primary {
    background: linear-gradient(135deg, #8b5cf6, #a855f7) !important;
    color: white !important;
    padding: 1rem 2rem !important;
    border-radius: 50px !important;
    font-weight: 600 !important;
    font-size: 1rem !important;
    border: none !important;
    box-shadow: 0 10px 30px rgba(139, 92, 246, 0.3) !important;
    transition: all 0.3s ease !important;
    text-decoration: none !important;
    display: inline-flex !important;
    align-items: center !important;
    gap: 0.5rem !important;
}

.hero .btn-primary:hover {
    transform: translateY(-3px) !important;
    box-shadow: 0 15px 40px rgba(139, 92, 246, 0.4) !important;
    background: linear-gradient(135deg, #7c3aed, #9333ea) !important;
}

/* Secondary Button Enhancement */
.hero .btn-secondary {
    background: rgba(255, 255, 255, 0.9) !important;
    color: #6366f1 !important;
    padding: 1rem 2rem !important;
    border-radius: 50px !important;
    font-weight: 600 !important;
    font-size: 1rem !important;
    border: 2px solid rgba(99, 102, 241, 0.2) !important;
    backdrop-filter: blur(10px) !important;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1) !important;
    transition: all 0.3s ease !important;
    text-decoration: none !important;
    display: inline-flex !important;
    align-items: center !important;
    gap: 0.5rem !important;
}

.hero .btn-secondary:hover {
    transform: translateY(-3px) !important;
    background: rgba(99, 102, 241, 0.1) !important;
    border-color: rgba(99, 102, 241, 0.4) !important;
    box-shadow: 0 15px 40px rgba(99, 102, 241, 0.2) !important;
}

/* Enhanced Grid Layout */
.hero .grid {
    align-items: center !important;
    gap: 4rem !important;
}

/* Content Section Enhancement */
.hero .grid > div:first-child {
    padding-right: 2rem !important;
}

/* Image Container Enhancement */
.hero .portrait-frame {
    position: relative !important;
    border-radius: 20px !important;
    overflow: hidden !important;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15) !important;
    transition: all 0.3s ease !important;
}

.hero .portrait-frame:hover {
    transform: translateY(-5px) !important;
    box-shadow: 0 35px 70px rgba(0, 0, 0, 0.2) !important;
}

/* Enhanced Decorative Elements */
.decorative-circle {
    opacity: 0.6 !important;
    animation: float 6s ease-in-out infinite !important;
}

.decorative-circle-1 {
    animation-delay: 0s !important;
}

.decorative-circle-2 {
    animation-delay: 3s !important;
}

@keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(180deg); }
}

/* Mobile Responsive Enhancements */
@media (max-width: 768px) {
    .hero {
        padding: 2rem 0 !important;
        min-height: 70vh !important;
    }
    
    .hero h1 {
        font-size: 2.5rem !important;
        text-align: center !important;
    }
    
    .hero .text-lg.text-gray-600 {
        font-size: 1.125rem !important;
        text-align: center !important;
        max-width: 100% !important;
    }
    
    .hero .text-sm.tracking-wide {
        display: block !important;
        text-align: center !important;
        margin: 0 auto 2rem auto !important;
        width: fit-content !important;
    }
    
    .hero .flex.space-x-4 {
        flex-direction: column !important;
        align-items: center !important;
        gap: 1rem !important;
    }
    
    .hero .btn-primary,
    .hero .btn-secondary {
        width: 100% !important;
        max-width: 280px !important;
        justify-content: center !important;
    }
    
    .hero .grid {
        gap: 3rem !important;
        text-align: center !important;
    }
    
    .hero .grid > div:first-child {
        padding-right: 0 !important;
        order: 2 !important;
    }
    
    .hero .portrait-frame {
        order: 1 !important;
        max-width: 300px !important;
        margin: 0 auto !important;
    }
}

@media (max-width: 480px) {
    .hero h1 {
        font-size: 2rem !important;
    }
    
    .hero .text-lg.text-gray-600 {
        font-size: 1rem !important;
    }
}

/* Enhanced Visual Effects */
.hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(ellipse at top left, rgba(139, 92, 246, 0.05), transparent 50%),
                radial-gradient(ellipse at bottom right, rgba(236, 72, 153, 0.05), transparent 50%);
    pointer-events: none;
    z-index: 0;
}

.hero > * {
    position: relative;
    z-index: 1;
}
