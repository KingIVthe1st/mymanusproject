/* Nuclear option - target anything with folder-open icon */
.fas.fa-folder-open {
    color: #FFFFFF !important;
}

/* Nuclear option - target parent of folder-open icon */
*:has(.fas.fa-folder-open) {
    background: linear-gradient(135deg, #8B5CF6 0%, #EC4899 50%, #F59E0B 100%) !important;
    color: #FFFFFF !important;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5) !important;
    font-weight: 600 !important;
    padding: 12px 24px !important;
    border-radius: 8px !important;
    display: inline-flex !important;
    align-items: center !important;
    justify-content: center !important;
    text-decoration: none !important;
    border: none !important;
    box-shadow: 0 4px 15px rgba(139, 92, 246, 0.4) !important;
    transition: all 0.3s ease !important;
}

/* Mobile responsive */
@media (max-width: 768px) {
    #featured-in .featured-item:last-child a[href="#"],
    .featured-item .press-kit-button,
    a[href="#"]:has(i.fas.fa-folder-open) {
        padding: 10px 20px !important;
        font-size: 13px !important;
        min-width: 140px !important;
    }
}

/* Focus states for accessibility */
#featured-in .featured-item:last-child a[href="#"]:focus,
.press-kit-button:focus {
    outline: 3px solid rgba(139, 92, 246, 0.6) !important;
    outline-offset: 2px !important;
}
